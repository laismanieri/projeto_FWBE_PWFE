package br.senai.sp.produto.dao;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.jdbc.core.BeanPropertyRowMapper;
import org.springframework.jdbc.core.JdbcTemplate;
import org.springframework.stereotype.Repository;

import br.senai.sp.produto.model.Produto;

@Repository
public class ProdutoDao {
	
    @Autowired
    JdbcTemplate  jdbcTemplate;

	public List<Produto> listarTodos() {
	    String sql = "SELECT id, descricao, preco FROM produtos";
	     
	    List<Produto> lista = jdbcTemplate.query(sql,
	                BeanPropertyRowMapper.newInstance(Produto.class));

		return lista;
	}
	
	
	public Produto pegarPorId(int id) {
		
	    String sql = "SELECT id, descricao, preco FROM produtos WHERE id=?";
	    
		Object[] params = {id};
	    
	    Produto produto = jdbcTemplate.queryForObject(sql,
	        BeanPropertyRowMapper.newInstance(Produto.class), params);
	    
		return produto;
	}
	
	public Integer novo(Produto p) {
		
        String sql = "INSERT INTO produtos (descricao, preco) VALUES (?, ?)";
        int result = jdbcTemplate.update(sql, p.getDescricao(), p.getPreco());
		
		return result;
	}
	
	public int editar(Produto p, int id) {
		String sql = "UPDATE produtos SET descricao=?, preco=? WHERE id=?";
		
	    Object[] params = {p.getDescricao(), p.getPreco(), id};
	    
	    int result = jdbcTemplate.update(sql, params);
	     
		return result;
	}
	
	public int deletar(int id) {
		
		String sql = "DELETE FROM produtos WHERE id=?";
		
		Object[] params = {id};
		
		int result = jdbcTemplate.update(sql, params);
		
		return result;
	}
	
	
}